@import ("../variables.styl")
@import ("../common.styl")
body
    overflow visible

    .thanks
        font-size f50
        letter-spacing 0.03em
        margin 20px auto
        width 800px
        text-align center

    .thanks-small
        text-align center
        width 400px
        margin 20px auto
        font-size f17
        color lightgray

    textarea 
        font-family Alabama
        font-size f17
        letter-spacing 0.05em
        color placeholder
        background-color rgba(255,255,255,0.7)
        background-image url('../../images/placeholder_hand.png')
        background-position left 10px top 21px
        background-repeat no-repeat
        padding 10px 15px
        border-radius 10px
        border 1px solid #cccccc
        position relative
        left calc(50% - 226px)
        margin-bottom 34px
        resize none

        &:focus
            outline 0           
            box-shadow 0 0 7px rgba(94,162,125,0.7)
            transition all 0.3s
            background-image none !important

    @-moz-document url-prefix() 
        textarea 
            height 3.7em
            width 40ch    

    .empty-value
        background-image url('../../images/placeholder_red_hand.png') !important
        background-repeat no-repeat

    .filled-value
        background-image none !important

    #sendComment
        background-image url('../images/login_btn.png')
        width 196px
        height 45px
        position relative
        top -12px
        left 366px
        border-radius 10px
        background-color rgba(0,0,0,0)
        border none
        font-family Alabama, sans-serif
        font-size f17
        color darkgray
        cursor pointer
        padding-bottom 2px
        display block
        letter-spacing 0.02em  
        margin-bottom 17px
            
        &:hover
            background-color rgba(94,162,125,0.5)
            transition all 0.3s

        &:focus
            outline none   

    .comment-template
        letter-spacing 0.05em
        width 700px
        background-color rgba(136,160,226,0.1)
        padding 10px 15px
        border-radius 10px
        border 1px solid rgba(255,23,148,.4)
        margin 3px auto

        .login
            float left
            margin-left 10px
            color pink
            color #136894

        .date
            float right
            margin-right 10px
            color #136894

        .text
            padding 30px 10px 7px 10px
            margin 0
