@import ("variables.styl")

@font-face
    font-family "Alabama"
    
    src url('../fonts/Alabama.ttf')
    src url('../fonts/Alabama.eot?#iefix') format('embedded-opentype'), url('../fonts/Alabama.woff') format('woff'), url('../fonts/Alabama.ttf') format('truetype')
    font-weight normal
    font-style normal


body
    background-image url('../images/cell.png')
    margin 0
    padding 0
    font-family Alabama
    overflow-y hidden
  
    .wrapper
        width wrapper
        margin 0 auto

    .hiden
        display none

    .github
        position fixed
        left 10px
        top 10px
        height 27px
        width 28px
        &:before
            content url('../images/github.png')

    .pleaseChangeOrientation 
        position absolute
        z-index 10
        top 0
        left 0
        width 205vw
        height 1300px
        background-color rgba(0,0,0, 1)
        font-size f20
        color white
        font-size 3.2em
        letter-spacing 0.03em
        text-align center

    .pleaseChangeOrientation > div
        width 340px
