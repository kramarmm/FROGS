@import ("variables.styl")
@import ("common.styl")
@import ("button.styl")

body
    .papper
        height 600px
        background-image url('../images/papper.png')
        background-repeat no-repeat
        background-position center

        .close
            width 22px
            height 22px
            background-image url('../images/close.png')
            background-repeat no-repeat
            float right 
            margin 55px 132px 0 0

        .close:hover
            background-position -22px 0
            cursor pointer


        .heading
            font-size f30
            width 247px
            display block
            margin 0 auto
            padding-top 80px

        .item
            font-size f20
            display block
            text-align right
            float left
            padding-left 280px
            padding-top 30px
            line-height 1.3

        .item-value
            font-size f16
            color lightgray
            display block
            padding-left 470px
            padding-top 30px
           
        .dimonds
            display block
            color lightgray
            margin-left 281px
            padding 70px 0 50px 0


            