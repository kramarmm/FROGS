        .attack
            position absolute
            z-index 2
 
            @import ("close.styl")

            .image-attack
                position relative
                top 34px
                left 93px

            #attackBtn
                font-size f30
                color black
                position relative
                top -600px
                left 378px
                height 42px
                width 100px
                padding-left 19px
                padding-top 8px


                &:hover
                    color pink
                    cursor pointer
                    transition all 0.2s

                &:active
                    color black
                    transform scale(0.94)

            .fate-obj
                height 102px
                width 102px
                border-radius 12px
                border 2px dashed #E0E0E0
                position relative

                &:hover
                    border-color pink
                    cursor pointer
                    transition all 0.3s

                &:active
                    border-color #6A111A
                    transform scale(0.96)

            .choosen-fate
                border 2px solid pink


            // position for every fate-obj

