.chi
    width 180px
    height 116px
    position absolute
    z-index 3
    top 362px
    left 78px
    transform rotate(15deg)
    border-radius 70px
    cursor pointer
    border 1px solid black

    &:hover:before        
        content url('../../images/chi_hint.png')
        position relative
        display block
        transform rotate(-15deg)
        top 22px
        left 139px

.chi-passed
    width 180px
    height 116px
    position absolute
    z-index 3
    top 362px
    left 78px
    transform rotate(15deg)
    border-radius 70px
    cursor not-allowed
    border 1px solid black
    cursor url(../../images/cursor.png), default

