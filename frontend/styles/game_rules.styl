@import ("button.styl")

        .close
            width 22px
            height 22px
            background-image url('../images/close.png')
            background-repeat no-repeat
            float right 
            margin 18px 30px 0 0

            &:hover
                background-position -22px 0
                cursor pointer

        .br-small
            display block
            margin 3px 0

        .heading
            font-size f30
            width 247px
            display block
            margin 0 auto
            padding-top 40px

        @-moz-document url-prefix()
            .heading
                padding-top 26px


        .item
            font-size f20
            display block
            text-align right
            float left
            padding-left 176px
            padding-top 30px
            line-height 1.3

        .item-value
            font-size f16
            color lightgray
            display block
            padding-left 370px
            padding-top 30px
           
        .dimonds
            display block
            color lightgray
            padding-left 370px
            padding-top 48px
            margin-bottom 35px

        @-moz-document url-prefix()
                .dimonds
                    padding-top 39px

        .rules-diamond
            display block
            position relative
            top -180px
            left 285px

        .small-diamond
            display block
            position relative
            top -178px
            left 592px
            

        @-moz-document url-prefix()
            .small-diamond
                top -185px
                left 589px
            