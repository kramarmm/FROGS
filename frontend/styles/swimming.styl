@keyframes swimming {
    0%   {       
       margin-right 100px
       transform scaleX(1)
       opacity 0
    }
    3% {
        opacity 0
    }
    10% {
        opacity 1
    }
    43% {
        opacity 1
    }
    47% {
        opacity 0
        transform scaleX(1)
    }
    50% {
        margin-right 1000px
        transform scaleX(-1)
        opacity 0
    }
    53% {
        opacity 0
    }
    57% {
        opacity 1
    }
    93%{
        opacity 1
    }
    98%{
        opacity 0
        transform scaleX(-1)
    }
    100% {
        margin-right 100px
        transform scaleX(1)
        opacity 0
    }
}